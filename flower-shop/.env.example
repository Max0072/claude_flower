# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3001

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/flora-shop

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Delivery Service
DELIVERY_API_URL=https://api.delivery-service.example.com
DELIVERY_API_KEY=your_delivery_api_key

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Flora Shop <noreply@example.com>

# SMS Configuration
SMS_API_URL=https://api.sms-provider.example.com
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=FloraShop

# Uploads
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX=100 # Limit each IP to 100 requests per windowMs